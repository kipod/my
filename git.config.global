[user]
	name = Nikolay
	email = nchernov@algotradinghub.com
[core]
	autocrlf = false
	editor = vi
[alias]
    	ci = commit
	co = checkout
	st = status
	br = branch
	hist = log --pretty=format:\"%Cred%h %Creset%ad %Cred| [%an] | %Cgreen%s%d\" --graph --date=short --color
	lg = log --all --graph --date=relative --pretty=format:\"%C(auto)%h%x09 %ad%x09 | %s %d %C(bold blue)<%an>\"
[color]
	ui = true
[push]
	default = matching

